<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:TwitchGUI"
        xmlns:Main="clr-namespace:TwitchGUI.Main" x:Class="TwitchGUI.ChannelInfoPanel" mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Main:ChannelInfoToolbar HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,5" />
        <Image x:Name="image" Grid.Row="1" />
        <Main:ChannelInfoTexts VerticalAlignment="Bottom" Grid.Row="2" />

    </Grid>
</UserControl>
